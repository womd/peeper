<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Audio intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_autioIntern"
            android:onClick="audioInternActivity"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="audio extern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_audioExtern"
            android:onClick="audioExternActivity"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/button_autioIntern" app:layout_constraintHorizontal_bias="0.075"/>
    <Button
            android:text="video intern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_videoIntern"
            android:onClick="videoInternActivity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_autioIntern" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="hf ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_hfping"
            android:onClick="hfPingActivity"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/button_autioIntern" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="video extern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_videoExtern"
            android:onClick="videoExternActivity"
            app:layout_constraintStart_toEndOf="@+id/button_videoIntern" android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_audioExtern"/>
</androidx.constraintlayout.widget.ConstraintLayout>